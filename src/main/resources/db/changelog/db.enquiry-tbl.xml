<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="squapl" id="createEnquiryTable">
        <createTable tableName="enquiry">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="center_id" type="BIGSERIAL"/>
            <column name="e_user_id" type="BIGSERIAL"/>
            <column name="p_user_id" type="BIGSERIAL"/>
            <column name="user_type" type="varchar(45)"/>
            <column name="service_id" type="BIGSERIAL"/>
            <column name="service_category_id" type="BIGSERIAL"/>
            <column name="status" type="varchar(20)"/>
            <column name="trial_status" type="varchar(20)"/>
            <column name="trial_pack" type="BIGSERIAL"/>

            <column name="enquiry_datetime" type="datetime(6)"/>
            <column name="enquiry_closure_datetime" type="datetime(6)"/>
            <column name="assigned_to" type="BIGSERIAL"/>
            <column name="lead_source" type="varchar(80)"/>
            <column name="nxt_followup_datetime" type="datetime(6)"/>
            <column name="status_notes" type="varchar(80)"/>

            <column name="createdby" type="integer"/>
            <column name="createddatetime" type="datetime(6)"/>
            <column name="updatedby" type="integer"/>
            <column name="updateddatetime" type="datetime(6)"/>

        </createTable>
    </changeSet>


    <changeSet author="squapl" id="e_userid_fk">
        <addForeignKeyConstraint baseColumnNames="e_user_id" baseTableName="enquiry" constraintName="e_userid_fk"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>

    <changeSet author="squapl" id="e_centerid_fk">
        <addForeignKeyConstraint baseColumnNames="center_id" baseTableName="enquiry" constraintName="e_centerid_fk"
                                 referencedColumnNames="id" referencedTableName="center_details"/>
    </changeSet>

    <changeSet author="squapl" id="p_userid_fk">
        <addForeignKeyConstraint baseColumnNames="p_user_id" baseTableName="enquiry" constraintName="p_userid_fk"
                                 referencedColumnNames="id" referencedTableName="enq_prospects"/>
    </changeSet>

    <changeSet author="squapl" id="a_userid_fk">
        <addForeignKeyConstraint baseColumnNames="assigned_to" baseTableName="enquiry" constraintName="a_userid_fk"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>

    <changeSet author="squapl" id="trial_pack_fk">
        <addForeignKeyConstraint baseColumnNames="trial_pack" baseTableName="enquiry" constraintName="trial_pack_fk"
                                 referencedColumnNames="id" referencedTableName="enq_trial"/>
    </changeSet>

    <changeSet author="squapl" id="enquiry_service_fk">
        <addForeignKeyConstraint baseColumnNames="service_id" baseTableName="enquiry"
                                 constraintName="enquiry_service_fk"
                                 referencedColumnNames="id" referencedTableName="service"/>
    </changeSet>

    <changeSet author="squapl" id="enquiry_service_category_fk">
        <addForeignKeyConstraint baseColumnNames="service_category_id" baseTableName="enquiry"
                                 constraintName="enquiry_service_category_fk"
                                 referencedColumnNames="id" referencedTableName="service_category"/>
    </changeSet>

</databaseChangeLog>