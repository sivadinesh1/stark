<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="squapl" id="createUserTable">
        <createTable tableName="enq_service_tiral">
            <column autoIncrement="true" name="id" type="integer">
                <!--            <constraints primaryKey="true"/>-->
            </column>
            <column name="service_id" type="BIGSERIAL"/>
            <column name="trial_id" type="BIGSERIAL"/>
        </createTable>
    </changeSet>


    <changeSet author="squapl" id="service_id_fk">
        <addForeignKeyConstraint baseColumnNames="service_id" baseTableName="enq_service_tiral"
                                 constraintName="service_id_fk"
                                 referencedColumnNames="id" referencedTableName="service"/>
    </changeSet>

    <changeSet author="squapl" id="trial_id_fk">
        <addForeignKeyConstraint baseColumnNames="trial_id" baseTableName="enq_service_tiral"
                                 constraintName="trial_id_fk"
                                 referencedColumnNames="id" referencedTableName="service"/>
    </changeSet>

    <changeSet author="squapl" id="addServiceTrialPK">
        <addPrimaryKey
                columnNames="service_id, trial_id"
                constraintName="pk_service_trial"
                tableName="enq_service_tiral"
        />
    </changeSet>

</databaseChangeLog>